---
import { getCollection } from "astro:content";
import type { AstroSeoProps } from "@astrolib/seo";
import MarkdownPostLayout from "../../layouts/MarkdownPostLayout.astro";

export async function getStaticPaths() {
	const blogEntries = await getCollection("posts");

	return blogEntries
		.map((entry) => {
			const [lang, ...slug] = entry.slug.split("/");
			return { params: { lang, slug: slug.join("/") || undefined }, props: entry };
		})
		.filter((entry) => entry.params.lang === "es");
}

const entry = Astro.props;
const { Content } = await entry.render();

const seo: AstroSeoProps = {
	title: entry.data.title,
	description: entry.data.description,
	canonical: `https://solucion.io/es/blog/${entry.slug}/`,
	openGraph: {
		url: entry.slug,
		title: entry.data.title,
		description: "{frontmatter.description}",
		images: [
			{
				url: "https://picsum.photos/1200/630",
				width: 1200,
				height: 630,
				alt: "Social open graph",
				type: "image/jpeg",
			},
			{
				url: "https://picsum.photos/4096/4096",
				width: 4096,
				height: 4096,
				alt: "Twitter open graph",
				type: "image/jpeg",
			},
			{ url: "https://picsum.photos/1200/630" },
			{ url: "https://picsum.photos/4096/4096" },
		],
		site_name: "YourSitesName",
	},
	twitter: {
		handle: "@TwitterHandle",
		site: "@site",
		cardType: "summary_large_image",
	},
};
---

<MarkdownPostLayout frontmatter={entry.data} body={entry.body} seo={seo}>
	<Content />
</MarkdownPostLayout>
